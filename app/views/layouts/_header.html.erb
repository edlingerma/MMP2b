<header class="header">
    <nav>
        <ul class="header__list_navlinks">
            <li><%= link_to 'New Challenge', new_challenge_path %></li>
            <li><%= link_to 'Home', root_path %></li>
            <% if current_user %>
                <li><%= link_to 'My Challenges', my_challenges_challenges_path %></li>
                <li> Logged in as <%= current_user.username %>.
                <%= link_to "Log Out", logout_path %></li>
            <% else %>
                <li><%= link_to "Sign Up", signup_path %> or
                <%= link_to "Log In", login_path %></li>
            <% end %> 
        </ul>
    </nav>
</header>