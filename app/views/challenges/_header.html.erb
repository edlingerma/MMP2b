<div id="menuToggle">
    <input type="checkbox" />
        <span></span>
        <span></span>
        <span></span>
                            
        <ul id="menu">
            <li><%= link_to 'Home', root_path %></li>
            <% if current_user %>
              <li><%= link_to 'My Challenges', my_challenges_challenges_path %></li>
            <% end %>
            <li><%= link_to 'New Challenge', new_challenge_path %></li>
            <% if current_user %>
                <li><%= link_to "Log Out", logout_path %></li>
            <% else %>
                <li><%= link_to "Sign Up", signup_path %> or
                <%= link_to "Log In", login_path %></li>
            <% end %>
        </ul>
</div>
<header class="header">
            <div class="header_logo">
              <%= link_to root_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 323 161" width="323" height="161">
                  <defs>
                    <image width="261" height="124" id="img1" href="data:image/png;base64,"/>
                  </defs>
                  <style>
                    tspan { white-space:pre }
                  </style>
                  <use id="Background" href="#img1" x="31" y="13" />
                </svg>
              <% end %>
            </div>
            <% if current_user %>
              <div class="header_item"><%= link_to 'My Challenges', my_challenges_challenges_path %>
                <% if num_requests > 0 %>
                  <span class="num_requests num_requests--navbar"><%= num_requests %></span>
                <% end %>
              </div>
            <% end %>
            <div class="header_item"><%= link_to 'New Challenge', new_challenge_path %></div>
            <% if current_user %>
                <div class="header_item"> Logged in as <b class="highlight"><%= current_user.username %></b>.
                <%= link_to "Log Out", logout_path %></div>
            <% else %>
                <div class="header_item"><%= link_to "Sign Up", signup_path %> or
                <%= link_to "Log In", login_path %></div>
            <% end %> 
</header>