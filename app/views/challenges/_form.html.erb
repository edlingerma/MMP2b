<%= javascript_pack_tag "application" %>
<%= form_with(model: challenge, local: true) do |form| %>
  <% if challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
        <% challenge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <h1>Activities</h1>
  <div data-controller="nested-form">
    <template data-target='nested-form.template'>
      <%= form.fields_for :activities, Activity.new, child_index: 'TEMPLATE_RECORD' do |activity| %>
        <%= render 'activity_fields', form: activity %>
      <% end %>
    </template>

    <%= form.fields_for :activities do |activity| %>
      <%= render 'activity_fields', form: activity %>
    <% end %>

    <div data-target="nested-form.add_item">
      <%= link_to "Add Activity", "#", data: { action: "nested-form#add_association" } %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
