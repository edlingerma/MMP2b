
<div class="blurr">

<div class="columns is-multiline is-centered">
 <% @challenges.each do |challenge| %>
 
    <div class="column is-two-fifths"> 
    
    <%# // nächste größe : is-two-fifths und is four-fifths %>
    
    <div class="challengeContainer">
    <%= link_to(challenge, class: "challenge_img")  do%>  
      <div class="challenge_img">
      </div>
    <% end%>
     <%= link_to(challenge, class: "challenge_title") do%>
        <h2><%= challenge.title %></h2> 
     <% end %>
     <%= link_to(challenge, class: "challenge_descp") do%>
        <%= challenge.description %>
     <% end%>
      <%= link_to(challenge, class: "challenge_button") do%>
          <p>...Learn More</p>
      <% end%>
      </div>
      
    </div>
    
  <% end %>
</div>

<br>

<%= link_to 'New Challenge', new_challenge_path %>
<% if current_user %>
  <%= link_to 'My Challenges', my_challenges_challenges_path %>
<% end %>
<%= link_to 'Home', root_path %>
</div>