<div class="blurr">
  <div class="columns is-multiline is-centered">
   <% @challenges.each do |challenge| %>

      <div class="column is-half challengeWrapper">

        <div class="challengeContainer">
        <%= link_to(challenge, class: "challenge_img")  do%>
          <div class="challenge_img" style="background-image: url(<%= challenge.avatar.attached? ? rails_blob_path(challenge.avatar) : asset_path('logo.png') %>)"></div>
        <% end %>
         <%= link_to(challenge, class: "challenge_title") do%>
            <h2 class="subtitle"><%= challenge.title %></h2>
         <% end %>
         <%= link_to(challenge, class: "challenge_descp") do%>
            <p><%= challenge.description %></p>
         <% end%>
          <%# <%= link_to(challenge, class: "challenge_button") do%>
              <%# <p>...Learn More</p> %>
          <%# <% end%>
          </div>
          <% unless current_user == nil %>
            <% if current_user == challenge.owner %>
              <% if challenge.requests.length > 0 %>
                <% unconfirmed_requests = challenge.requests.select do |request| %>
                  <%request.confirmed.nil? %>
                <% end %>
                <span class="num_requests"><%= unconfirmed_requests.length %></span>
              <% end %>
            <% end %>
          <% end %>

      </div>

    <% end %>
  </div>
</div>