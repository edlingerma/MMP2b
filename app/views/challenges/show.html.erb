<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @challenge.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @challenge.description %>
</p>

<% @activities.each_with_index do |activity, i| %>
<br /> <br />
  <strong>Activity:</strong>
  <%= activity.title %><br />
  <%= activity.description %><br />
  <%= @activities_amount[i] %><br />
  <%= link_to 'Contribute', new_entry_path(activity_id: activity.id) %>

<% end %>

<% @unconfirmed_requests.each do |request| %>
<br />Request user
  <%= request.user.name %>
  <%= link_to 'accept', accept_request_path(request.id) %>
  <%= link_to 'reject', reject_request_path(request.id) %>

<% end %>

